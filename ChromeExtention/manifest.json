{
  "manifest_version": 3,
  "name": "Research Board Extension",
  "version": "0.1.0",
  "description": "A minimal Chrome extension for research-board with popup support.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage",
  "activeTab",
  "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*/*.pdf*"],
      "js": ["pdfContent.js"],
      "run_at": "document_idle"
    }
  ]
}
