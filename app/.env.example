# Environment configuration for Research Board API
# Copy this file to .env and update the values as needed

# API Configuration
API_VERSION=1.0.0
API_PREFIX=/api/v1
HOST=127.0.0.1
PORT=8000
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///./research_board.db
DATABASE_ECHO=False

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,chrome-extension://*

# Application Settings
MAX_PAGE_CONTENT_LENGTH=50000
MAX_HIGHLIGHTS_PER_PAGE=100
ENABLE_SEMANTIC_SEARCH=True

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
